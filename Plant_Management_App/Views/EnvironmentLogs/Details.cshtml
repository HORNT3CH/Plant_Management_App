@model Plant_Management_App.Models.EnvironmentLog

@{
    ViewData["Title"] = "Details";
}
<br />
<h1 class="mt-5">Details for Log # @Model.LogID</h1>

<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Greenhouse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Greenhouse.GreenhouseID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LogDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LogDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TemperatureC)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TemperatureC)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HumidityPercent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HumidityPercent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.LogID">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

@model Plant_Management_App.Models.EnvironmentLog

@{
    ViewData["Title"] = "Delete";
}
<br />
<h1 class="mt-5">Delete Log # @Model.LogID</h1>

<h3>Are you sure you want to delete this?</h3>
<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Greenhouse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Greenhouse.GreenhouseID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LogDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LogDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TermperatureC)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TermperatureC)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HumidityPercent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HumidityPercent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LogID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>

@model IEnumerable<Plant_Management_App.Models.Greenhouse>

@{
    ViewData["Title"] = "Index";
}
<br />
<h1 class="mt-5">Greenhouse List</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Add Greenhouse</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered table-light table-striped m-auto custom-table text-dark">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SizeSqFt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TemperatureControlled)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HumidityControlled)
                </th>                
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td class="fit">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.GreenhouseID">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.GreenhouseID">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.GreenhouseID">Delete</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SizeSqFt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TemperatureControlled)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HumidityControlled)
                </td>                
            </tr>
    }
        </tbody>
    </table>
</div>
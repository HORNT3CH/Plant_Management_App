@model Plant_Management_App.Models.Plant

@{
    ViewData["Title"] = "Details";
}
<br />
<h1 class="mt-5">Details for @Model.CommonName</h1>

<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CommonName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CommonName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ScientificName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScientificName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlantType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlantType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GrowingSeason)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GrowingSeason)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SunRequirements)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SunRequirements)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WaterRequirements)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WaterRequirements)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SoilType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoilType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="~/@Model.ImagePath" alt="@Model.CommonName" width="200" class="img-thumbnail" />
            }
            else
            {
                <p><em>No image available.</em></p>
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.PlantID">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

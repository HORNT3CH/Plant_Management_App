@model IEnumerable<Plant_Management_App.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}
<br />
<h1 class="mt-5">Suppliers List</h1>

<p>
    <a asp-action="Create">New Supplier</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered table-light table-striped m-auto custom-table text-dark">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactPerson)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>                
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.SupplierID">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.SupplierID">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.SupplierID">Delete</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactPerson)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>                
            </tr>
    }
        </tbody>
    </table>
</div>

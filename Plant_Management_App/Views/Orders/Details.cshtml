@model Plant_Management_App.Models.Order

@{
    ViewData["Title"] = "Details";
}
<br />
<h1 class="mt-5">Details for Order # @Model.OrderID</h1>
<a asp-action="Print" asp-route-id="@Model.OrderID" class="btn btn-outline-secondary" target="_blank">
    🖨️ Print Order
</a>
<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.OrderID">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

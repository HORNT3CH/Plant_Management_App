@model Plant_Management_App.Models.Order

@{
    ViewData["Title"] = "Details";
}
<br />
<h1 class="mt-5">Details for Order # @Model.OrderID</h1>
<a asp-action="Print" asp-route-id="@Model.OrderID" class="btn btn-outline-secondary" target="_blank">
    🖨️ Print Order
</a>
<a asp-controller="OrderDetails" asp-action="Create" asp-route-orderId="@Model.OrderID" class="btn btn-success">
    ➕ Add Item to Order
</a>
<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @($"{Model.Customer.FirstName} {Model.Customer.LastName}")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class = "col-sm-10">
            @* @Html.DisplayFor(model => model.TotalAmount) *@
            @Model.TotalAmount.ToString("C")
        </dd>
    </dl>
</div>
@if (Model.OrderDetails != null && Model.OrderDetails.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Plant</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.OrderDetails)
            {
                <tr>
                    <td>@detail.Inventory?.Plant?.CommonName</td>
                    <td>@detail.Quantity</td>
                    <td>@(detail.UnitPrice.ToString("C"))</td>
                    <td>@((detail.Quantity* detail.UnitPrice).ToString("C"))</td>
                    <td>
                        <a asp-action="Edit" asp-controller="OrderDetails" asp-route-id="@detail.OrderDetailID">✏️</a> |
                        <a asp-action="Delete" asp-controller="OrderDetails" asp-route-id="@detail.OrderDetailID">🗑️</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>No items added to this order yet.</em></p>
}

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.OrderID">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

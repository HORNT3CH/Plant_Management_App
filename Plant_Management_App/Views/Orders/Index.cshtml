@model IEnumerable<Plant_Management_App.Models.Order>

@{
    ViewData["Title"] = "Index";
}
<br />
<h1 class="mt-5">Order List</h1>

<p>
    <a class="btn btn-success" asp-action="Create">New Order</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered table-light table-striped m-auto custom-table text-dark">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalAmount)
                </th>            
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.OrderID">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.OrderID">Details</a> |
                    <a class="btn btn-secondary" asp-action="Delete" asp-route-id="@item.OrderID">Delete</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CustomerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @item.TotalAmount.ToString("C")
                </td>                
            </tr>
    }
        </tbody>
    </table>
</div>

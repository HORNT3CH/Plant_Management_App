@model Plant_Management_App.Models.Order
@{
    Layout = null;
}
<html>
<head>
    <title>Order #@Model.OrderID Confirmation</title>
    <style>
        body {
            font-family: Arial;
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }
    </style>
</head>
<body>
    <h2>Order Confirmation</h2>
    <p><strong>Order ID:</strong> @Model.OrderID</p>
    <p><strong>Date:</strong> @Model.OrderDate.ToShortDateString()</p>
    <p><strong>Customer:</strong> @Model.Customer.FirstName @Model.Customer.LastName</p>

    <h3>Items</h3>
    <table>
        <thead>
            <tr>
                <th>Plant</th>
                <th>Location</th>
                <th>Qty</th>
                <th>Unit Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@item.Inventory.Plant.CommonName</td>
                    <td>@item.Inventory.Location</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@((item.Quantity * item.UnitPrice).ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Total: $@Model.OrderDetails.Sum(i => i.Quantity * i.UnitPrice).ToString("F2")</h4>
</body>
</html>
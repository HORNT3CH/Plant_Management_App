@model Plant_Management_App.Models.PlantBatch

@{
    ViewData["Title"] = "Delete";
}
<br />
<h1 class="mt-5">Delete Batch # @Model.BatchID</h1>

<h3>Are you sure you want to delete this?</h3>
<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Plant)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Plant.CommonName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Greenhouse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Greenhouse.GreenhouseID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SeedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SeedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TransplantDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TransplantDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuantityPlanted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantityPlanted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExpectedHarvestDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpectedHarvestDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BatchID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
